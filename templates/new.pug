extends layout.pug

block content
  h2 New coffeegram

  form(action="submit" method="post")
    div(class="form-group")
      img(class="img-fluid rounded" src="http://static.wixstatic.com/media/981f90_aa9a5b60ce1a4d7d96c59a37cf6cedbe.jpg")
    div(class="form-group")
      label(for="description") Describe your coffeegram
      textarea(class="form-control" name="description" placeholder="Latte ipsum dolor sit awhile")
    div(class="form-group")
      label(for="coffee-type") Coffee Type
      select(class="form-control" name="coffee-type")
        option Cappuccino
        option Cortado
        option Espresso
        option Flat White
        option Latte
        option Macchiato
    button(type="submit" class="btn btn-primary") Submit
